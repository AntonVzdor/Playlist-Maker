<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="background">@color/blue</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">@dimen/textSizeMain</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/textSizeMain</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinearSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="background">@color/settings_color2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeMain</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">@dimen/paddingStartSetting</item>
        <item name="android:paddingEnd">@dimen/paddingEndSetting</item>
        <item name="android:paddingTop">@dimen/paddingTopSetting</item>
        <item name="android:paddingBottom">@dimen/paddingBottomSetting</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeSettings</item>
    </style>

    <style name="ButtonSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/paddingStartSetting</item>
        <item name="android:paddingEnd">@dimen/paddingEndSetting</item>
        <item name="android:paddingTop">@dimen/paddingTopSetting</item>
        <item name="android:paddingBottom">@dimen/paddingBottomSetting</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textSizeSettings</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>