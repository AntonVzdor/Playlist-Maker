<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    app:layout_constraintDimensionRatio="1:1"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        style="@style/Toolbar"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24">

        <TextView
            android:text="@string/search"
            style="@style/SettingsText"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">


        <EditText
            android:id="@+id/inputEditText"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:autofillHints=""
            android:background="@drawable/search_field"
            android:contextClickable="true"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="#616161"
            android:textCursorDrawable="@color/YP_Blue"
            tools:ignore="DuplicateSpeakableTextCheck,RtlSymmetry,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <ImageView
            android:id="@+id/clearIcon"
            style="@style/IconSearchStyle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="28dp"
            android:background="@color/YP_Light_Gray"
            android:contentDescription="TODO"
            android:src="@drawable/baseline_close_24"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />
    </FrameLayout>
</LinearLayout>


