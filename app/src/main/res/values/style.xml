<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<resources>

    <style name="LinearMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/blue</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="MainText">
        <item name="android:textSize">@dimen/textSizeMain</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/textSizeMain</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinearSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="background">@color/settings_color2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_color</item>
        <item name="android:textSize">@dimen/textSizeMain</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">@dimen/paddingStartSetting</item>
        <item name="android:paddingEnd">@dimen/paddingEndSetting</item>
        <item name="android:paddingTop">@dimen/paddingTopSetting</item>
        <item name="android:paddingBottom">@dimen/paddingBottomSetting</item>
        <item name="android:textColor">@color/settings_color</item>
        <item name="android:textSize">@dimen/textSizeSettings</item>
    </style>

    <style name="ButtonSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/paddingStartSetting</item>
        <item name="android:paddingEnd">@dimen/paddingEndSetting</item>
        <item name="android:paddingTop">@dimen/paddingTopSetting</item>
        <item name="android:paddingBottom">@dimen/paddingBottomSetting</item>
        <item name="android:fontFamily">@font/ys_display</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textSizeSettings</item>
        <item name="android:textColor">@color/settings_color</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
        <item name="android:drawableTint">@color/YP_Text_Gray</item>
        <item name="android:backgroundTint">@color/YP_Light_Gray</item>
    </style>

    <style name="IconSearchStyle">
        <item name="tint">@color/YP_Text_Gray</item>
        <item name="android:background">@color/YP_Light_Gray</item>
    </style>

    <style name="SearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/YP_Text_Gray</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
    </style>

    <style name="FontStyle.Placeholder">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="RefreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:backgroundTint">?attr/note_color</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="FontStyle.Track">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/text_color_primary</item>
    </style>
    <style name="FontStyle.Track.ArtistName">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/text_color_secondary</item>
    </style>
</resources>